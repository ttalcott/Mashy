@{
    ViewData["Title"] = "Home Page";
}


<img src="/images/mashy.io.svg" class="img-responsive" alt="Responsive image">
<br/>
@* This is our search toolbar for searching food type and city *@
<div class="container">
    <div class="row">
            <form method="get" action="/" class="form-inline">
                <input name="location" class="form-control" type="text" placeholder="Location: City, State, Zip">
                <input name="food" class="form-control" type="text" placeholder="Keywords: Burgers, Beer, Tacos">
                <button type="submit" class="btn btn-primary"> <i class="glyphicon glyphicon-search"></i></button>
            </form>
        
    </div>
</div>

<h2>Mashy.io is an online and mobile application that is dedicated to locating restaurants in the Albuquerque area. This is achieved by searching sites such as yelp and grubhub.</h2>